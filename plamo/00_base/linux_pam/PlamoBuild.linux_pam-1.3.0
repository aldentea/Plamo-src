#!/bin/sh
##############################################################
pkgbase='linux_pam'
vers='1.3.0'
url="http://linux-pam.org/library/Linux-PAM-${vers}.tar.bz2"
digest="md5sum:da4b2289b7cfb19583d54e9eaaef1c3a"
arch=`uname -m`
build=B1
src="Linux-PAM-${vers}"
# See below
# --disable-regenerate-docu 
OPT_CONFIG="--enable-read-both-confs --disable-nis --disable-db"
DOCS='ABOUT-NLS AUTHORS CHANGELOG COPYING ChangeLog ChangeLog-CVS INSTALL NEWS README'
patchfiles=''
compress=txz
##############################################################

source /usr/share/plamobuild_functions.sh

# このスクリプトで使う1文字変数の意味
# 
# $W : このスクリプトを動かすカレントディレクトリ
# $S : ソースコードのあるディレクトリ(デフォルト: $W/${src})
# $B : ビルド用ディレクトリ(デフォルト: /tmp/build{,32})
# $P : ビルドしたファイルをインストールするディレクトリ（デフォルト: $W/work)

if [ $# -eq 0 ] ; then
  opt_download=0 ; opt_config=1 ; opt_build=1 ; opt_package=1
else
  opt_download=0 ; opt_config=0 ; opt_build=0 ; opt_package=0
  for i in $@ ; do
    case $i in
    download) opt_download=1 ;;
    config) opt_config=1 ;;
    build) opt_build=1 ;;
    package) opt_package=1 ;;
    esac
  done
fi
if [ $opt_download -eq 1 ] ; then
    download_sources
fi

if [ $opt_config -eq 1 ] ; then
    if [ -d $B ] ; then rm -rf $B ; fi ; mkdir -p $B 
######################################################################
#  don't copy sources, so need patch in the src dir
######################################################################
    cd $S
    for patch in $patchfiles ; do
        if [ ! -f .${patch} ]; then
            patch -p1 < $W/$patch
            touch .${patch}
        fi
    done

    cd $B
    # if [ -f $S/autogen.sh ] ; then
    #   sh ./autogen.sh
    # fi
    export PKG_CONFIG_PATH=/usr/${libdir}/pkgconfig:/usr/share/pkgconfig:/opt/kde/${libdir}/pkgconfig
    export LDFLAGS='-Wl,--as-needed' 
    $S/configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
                 --mandir='${prefix}'/share/man ${OPT_CONFIG[$i]} \
                 --libdir=/usr/$libdir --enable-securedir=/$libdir/security \
                 --sbindir=/$libdir/security --docdir=/usr/share/doc/$src
    
    if [ $? != 0 ]; then
	echo "configure error. $0 script stop"
	exit 255
    fi
fi
    
if [ $opt_build -eq 1 ] ; then
    cd $B
    export LDFLAGS='-Wl,--as-needed'
    make -j3
    if [ $? != 0 ]; then
	echo "build error. $0 script stop"
	exit 255
    fi
fi

if [ $opt_package -eq 1 ] ; then
  check_root
  if [ -d $P ] ; then rm -rf $P ; fi ; mkdir -p $P
  cd $B
  export LDFLAGS='-Wl,--as-needed'
  make install DESTDIR=$P

  install -dv $P/sbin
  ln -s /$libdir/security/pam_tally $P/sbin
  chmod 4755 $P/$libdir/security/unix_chkpwd
  for f in pam pam_misc pamc
  do
      mv -v $P/usr/$libdir/lib${f}.so.* $P/$libdir
      ln -sfv ../../$libdir/$(readlink $P/usr/$libdir/lib${f}.so) $P/usr/lib/lib${f}.so
  done

  install -Dm644 -v $W/console.handlers $P/etc/security/console.handlers
  install -Dm644 -v $W/console.handlers $docdir/$src/console.handlers
  
  install -Dm644 -v $W/system-auth $P/etc/pam.d/system-auth
  install -Dm644 -v $W/system-auth $docdir/$src/system-auth
  
  for f in halt poweroff reboot
  do
      install -Dm644 -v $W/halt $P/etc/pam.d/$f
  done
  install -Dm644 -v $W/halt $docdir/$src/halt
  
  install -Dm644 -v $W/other $P/etc/pam.d/other
  install -Dm644 -v $W/other $docdir/$src/ohter
  
  ln -sfv system-auth $P/etc/pam.d/plamo-default
  
  install -Dm644 -v $W/securetty $P/etc/securetty
  seq -f "tty%g" 12 >> $P/etc/securetty
  seq -f "ttyp%g" 12 >> $P/etc/securetty
  seq -f "ttyS%g" 0 3 >> $P/etc/securetty
  install -Dm644 -v $W/securetty $docdir/$src/securetty

  install -d $P/usr/share/doc/$src/doc
  mv -v $P/usr/share/doc/$src/*.txt $P/usr/share/doc/$src/doc/
  mv -v $P/usr/share/doc/$src/*.html $P/usr/share/doc/$src/doc/

################################
#      install tweaks
#  strip binaries, delete locale except ja, compress man, 
#  install docs and patches, compress them and  chown root.root
################################
  install_tweak

#############################
#   convert symlink to null file and 
#   add "ln -sf" command into install/doinst.sh
################################
  convert_links

  cd $P
  /sbin/makepkg ../$pkg.$compress <<EOF
y
1
EOF

fi
