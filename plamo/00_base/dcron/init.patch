-		add_daemon crond
-		stat_done
+		echo "crond started"
 	else
-		stat_fail
+		echo "crond failed to start"
 		exit 1
 	fi
 	;;
 
 stop)
-	stat_busy "Stopping Cron Daemon"
+	echo "Stopping Cron Daemon"
 	if [[ ! -z $PID ]]  && kill "$PID" &>/dev/null; then
-		rm_daemon crond
-		stat_done
+		rm -f /var/run/crond.pid
+		echo "crond stopped"
 	else
-		stat_fail
+		echo "crond failed to stop"
 		exit 1
 	fi
 	;;
