#!/bin/sh
##############################################################
pkgbase='efivar'
vers='31'
url="https://github.com/rhinstaller/${pkgbase}/releases/download/${vers}/${pkgbase}-${vers}.tar.bz2"
verify=""
arch=`uname -m`
build=B2
src="${pkgbase}-${vers}"
OPT_CONFIG=''
DOCS='COPYING README.md TODO'
patchfiles=''
compress=txz
##############################################################

source /usr/share/plamobuild_functions.sh

# このスクリプトで使う1文字変数の意味
#
# $W : このスクリプトを動かすカレントディレクトリ
# $S : ソースコードのあるディレクトリ(デフォルト: $W/${src})
# $B : ビルド用ディレクトリ(デフォルト: /tmp/build{,32})
# $P : ビルドしたファイルをインストールするディレクトリ（デフォルト: $W/work)


if [ $# -eq 0 ] ; then
  opt_download=0 ; opt_config=1 ; opt_build=1 ; opt_package=1
else
  opt_download=0 ; opt_config=0 ; opt_build=0 ; opt_package=0
  for i in $@ ; do
    case $i in
    download) opt_download=1 ;;
    config) opt_config=1 ;;
    build) opt_build=1 ;;
    package) opt_package=1 ;;
    esac
  done
fi
if [ $opt_download -eq 1 ] ; then
  download_sources
fi

if [ $opt_config -eq 1 ] ; then
  if [ -d $B ] ; then rm -rf $B ; fi ; cp -a $S $B
######################################################################
#  copy sources into build directory, patch and make in the build dir
######################################################################
  cd $B
  for patch in $patchfiles ; do
    patch -p1 < $W/$patch
  done

  sed 's|-O0|-Os|g' -i Make.defaults
  sed 's|-rpath,$(TOPDIR)/src|-rpath,$(libdir)|g' -i src/test/Makefile
fi
    
if [ $opt_build -eq 1 ] ; then
  cd $B
  export LDFLAGS='-Wl,--as-needed'
  export CFLAGS="$CFLAGS -flto"
  make libdir="/usr/${libdir}" \
       bindir="/usr/bin/" \
       mandir="/usr/share/man/" \
       includedir="/usr/include/" V=1 -j1
  if [ $? != 0 ]; then
    echo "build error. $0 script stop"
    exit 255
  fi

  cd src/test
  make libdir="/usr/${libdir}" \
       bindir="/usr/bin/" \
       mandir="/usr/share/man/" \
       includedir="/usr/include/" V=1 -j1
  if [ $? != 0 ]; then
    echo "build error. $0 script stop"
    exit 255
  fi
fi

if [ $opt_package -eq 1 ] ; then
  check_root
  if [ -d $P ] ; then rm -rf $P ; fi ; mkdir -p $P
  cd $B
  export LDFLAGS='-Wl,--as-needed'
  make DESTDIR=$P \
       libdir="/usr/${libdir}" \
       bindir="/usr/bin/" \
       mandir="/usr/share/man/" \
       includedir="/usr/include/" V=1 -j1 install

  install -d -v $P/usr/bin
  install -D -m 755 -v src/test/tester $P/usr/bin/efivar-tester

################################
#      install tweaks
#  strip binaries, delete locale except ja, compress man, 
#  install docs and patches, compress them and  chown root.root
################################
  install_tweak

#############################
#   convert symlink to null file and 
#   add "ln -sf" command into install/doinst.sh
################################
  convert_links

  cd $P
  /sbin/makepkg ../$pkg.$compress <<EOF
y
1
EOF

fi
